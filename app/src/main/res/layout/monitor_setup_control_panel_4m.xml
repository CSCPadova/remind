                <Button
                    android:id="@+id/buttonLR4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/button_equal_volumes" />

                <SeekBar
                    android:id="@+id/monitor_channel4_vol_l"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:max="100"
                    android:progress="50"
                    android:thumb="@drawable/custom_thumb"/>
                <!--android:progressDrawable="@android:color/black"
                android:thumb="@drawable/monitor_setup_speaker" />-->

                <SeekBar
                    android:id="@+id/monitor_channel4_vol_r"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:max="100"
                    android:progress="50"
                    android:thumb="@drawable/custom_thumb"/>
                <!--android:progressDrawable="@android:color/black"
                android:thumb="@drawable/monitor_setup_speaker" />-->

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>