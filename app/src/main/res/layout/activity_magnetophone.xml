<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/magnetophone_activity_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="unipd.dei.magnetophone.MagnetophoneActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/floor" />

	<unipd.dei.magnetophone.graphics.MagnetoCanvasView
		android:id="@+id/canvas"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_alignParentStart="true"
		android:layout_alignParentTop="true" />

	<unipd.dei.magnetophone.graphics.VideoView
	    android:id="@+id/video"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/canvas"
	    android:layout_alignRight="@+id/canvas" />

</RelativeLayout>
